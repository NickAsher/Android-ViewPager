<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6"
    android:layout_marginBottom="8dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/detail_scrn_topping_single_row_textview_name"
        android:text="main"
        android:textColor="#323232"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_weight="3"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/detail_scrn_topping_single_row_textview_price"
        android:text="this is the subtext of main"
        android:textColor="#7f7f7f"
        android:textSize="22sp"
        android:layout_weight="2"
        />

    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/detail_scrn_topping_single_row_checkbox"
        android:layout_weight="1"
        />

</LinearLayout>